<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:id="@+id/scripSelector"
        android:textSize="16sp"
        android:hint="Enter Scrip Name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtScripName"
        android:background="@android:color/holo_green_dark"
        android:textColor="#FFFFFF"
        android:paddingLeft="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="179dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/txtDate"
                            android:paddingLeft="5dp"
                            android:textSize="10dp"
                            android:textColor="@android:color/holo_orange_dark"
                            android:hint="Trade Date" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/txtClose"
                            android:paddingTop="2dp"
                            android:paddingLeft="3dp"
                            android:paddingBottom="1dp"
                            android:textSize="30dp"
                            android:textIsSelectable="false"
                            android:hint="0.0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/txtChange"
                            android:paddingLeft="7dp"
                            android:hint="0.0%" />
                    </LinearLayout>

                    <TableLayout
                        android:layout_width="205dp"
                        android:layout_height="111dp"
                        android:layout_toRightOf="@+id/linearLayout"
                        android:layout_alignRight="@+id/linearLayout"
                        android:layout_alignEnd="@+id/linearLayout">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dp"
                            style="@android:style/DeviceDefault.Light.ButtonBar">

                            <TextView
                                android:id="@+id/lblHigh"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_weight="1"
                                android:textSize="16dip"
                                android:text="High" />

                            <TextView
                                android:id="@+id/lblLow"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_weight="1"
                                android:textSize="16dip"
                                android:text="Low" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp" >

                            <TextView
                                android:id="@+id/txtHigh"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_weight="1"
                                android:textColor="#000000"
                                android:textSize="14dip"
                                android:hint="0.0" />

                            <TextView
                                android:id="@+id/txtLow"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_weight="1"
                                android:textColor="#000000"
                                android:textSize="14dip"
                                android:hint="0.0" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dp"
                            style="@android:style/DeviceDefault.Light.ButtonBar">

                            <TextView
                                android:id="@+id/lblOpen"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_weight="1"
                                android:textSize="16dip"
                                android:text="Open" />

                            <TextView
                                android:id="@+id/lblAvg"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_weight="1"
                                android:textSize="16dip"
                                android:text="Avg" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp" >

                            <TextView
                                android:id="@+id/txtOpen"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_weight="1"
                                android:textColor="#000000"
                                android:textSize="14dip"
                                android:hint="0.0" />

                            <TextView
                                android:id="@+id/txtAvg"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_weight="1"
                                android:textColor="#000000"
                                android:textSize="15dip"
                                android:hint="0.0" />

                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <TableLayout
                    android:layout_width="382dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/linearLayout"
                    android:layout_toEndOf="@+id/linearLayout">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:background="@android:color/holo_green_light">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="16dip"
                            android:text="Volume" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="16dip"
                            android:text="# Trades" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="16dip"
                            android:text="Delivery %" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/txtVolume"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0" />

                        <TextView
                            android:id="@+id/txtNumTrades"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0" />

                        <TextView
                            android:id="@+id/txtDelivery"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:background="@android:color/holo_green_light">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="16dip"
                            android:text="SMA 15" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="16dip"
                            android:text="50" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="16dip"
                            android:text="200" />
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/txt15"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0.0" />

                        <TextView
                            android:id="@+id/txt50"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="15dip"
                            android:hint="0.0" />

                        <TextView
                            android:id="@+id/txt200"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0.0" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp" >

                        <TextView
                            android:id="@+id/txt15Perc"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0.0" />

                        <TextView
                            android:id="@+id/txt50Perc"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="15dip"
                            android:hint="0.0" />

                        <TextView
                            android:id="@+id/txt200Perc"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0.0" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:background="@android:color/holo_green_light">

                        <TextView
                            android:id="@+id/lblBBh"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="16dip"
                            android:text="BB+20" />

                        <TextView
                            android:id="@+id/lblBBL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="16dip"
                            android:text="BB-20" />

                        <TextView
                            android:id="@+id/lbl20SMA"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            android:textSize="16dip"
                            android:text="SMA-20" />
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/txtBBh"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0.0" />

                        <TextView
                            android:id="@+id/txtBBl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="15dip"
                            android:hint="0.0" />

                        <TextView
                            android:id="@+id/txtSMA20"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0.0" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp" >

                        <TextView
                            android:id="@+id/txtBBhp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0.0" />

                        <TextView
                            android:id="@+id/txtBBlp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="15dip"
                            android:hint="0.0" />

                        <TextView
                            android:id="@+id/txtSMA20p"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:hint="0.0" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>